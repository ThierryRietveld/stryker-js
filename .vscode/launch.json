  "version": "0.2.0",
  "configurations": [
    {
      "command": "cd packages/mutant-sandbox && npm run stryker",
      "name": "Run npm mutant-sandbox",
      "request": "launch",
      "type": "node-terminal"
    },
    {
      "command": "cd packages/cucumber-runner && npm run stryker",
      "name": "Run npm cucumber",
      "request": "launch",
      "type": "node-terminal"
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Attach to Port",
      "address": "localhost",
      "port": 9229,
      "skipFiles": [
        "<node_internals>/**"
      ]
    },
    {
      "localRoot": "${workspaceRoot}/packages/typescript-checker-runner",
      "command": "npm start",
      "name": "Run typescript-checker-runner",
      "request": "launch",
      "type": "node-terminal"
    }
  ]
}
