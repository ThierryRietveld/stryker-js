{
  "$schema": "./packages/core/schema/stryker-schema.json",
  "coverageAnalysis": "perTest",
  "testRunner": "mocha",
  "reporters": [
    "json",
    "progress",
    "html",
    "dashboard"
  ],  
  "plugins": [
    "../mocha-runner",
    "../typescript-checker",
    "../odd-checker"
  ],
  "checkers": ["odd-checker", "typescript"],
  "dashboard": {},
  "timeoutMS": 10000,
  "buildCommand": "tsc -b",
  "mochaOptions": {
    "spec": ["dist/test/unit/**/*.js"]
  }
}
